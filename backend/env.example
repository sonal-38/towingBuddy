# MongoDB Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/towtrack?retryWrites=true&w=majority

# Twilio SMS Configuration (for OTP and notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Optional: Custom SMS template
TWILIO_SMS_TEMPLATE=Dear {ownerName},\n\nYour vehicle {vehicleNumber} has been towed from {towedFrom} to {towedTo}.\nFine: ₹{fine}\nReason: {reason}\n\nVisit: {appLink}\n\n— TowingBuddy Team

# Optional: App link for SMS notifications
TOWING_APP_LINK=www.towingbuddy.in

# OTP Configuration
OTP_TTL_MINUTES=7

# Server Configuration
PORT=5000
